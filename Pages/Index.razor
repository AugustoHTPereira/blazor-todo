@page "/"

<Nav TodoCount="todos.Count(x => !x.Done)" />


<div class="index box content">
    <div class="title">
        <h1>New todo</h1>
        <legend>Add new todo to your todo list</legend>
    </div>

    <EditForm Model="todo" class="body" OnSubmit="HandleAddTodo">
        <div class="input-field">
            <InputText type="text" id="name" placeholder="Name of todo" aria-placeholder="Name of todo"
                aria-autocomplete="none" autocomplete="off" @bind-Value="todo.Name" />

            <button>Submit</button>
        </div>
    </EditForm>

    @if (todos.Count > 0)
    {
        <div style="padding: 0 35px 35px; max-height: 360px; overflow-y: auto;">
            <table class="data">
                @foreach (var todo in todos)
                {
                    <tr>
                        <td class="data-id">
                            <input type="checkbox" name="@todo.Id" id="@todo.Id" @bind="todo.Done">
                        </td>
                        <td>
                            <span style="color: #434343; font-size: 1.2rem;">
                                @todo.Name
                            </span>
                        </td>
                        <td class="data-actions">
                            <button class="del" @onclick="() => HandleRemoveTodo(todo.Id)">
                                &times;
                            </button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>

@code {
    public class Todo
    {
        public string Name { get; set; }
        public bool Done { get; set; }
        public Guid Id { get; set; }
    }

    Todo todo = new Todo();

    private void HandleAddTodo()
    {
        todo.Id = Guid.NewGuid();
        todo.Done = false;

        if (!string.IsNullOrEmpty(todo.Name))
            todos.Add(todo);

        todo = new Todo();
    }

    private void HandleRemoveTodo(Guid todoId)
    {
        Todo foundedTodo = todos.First(x => x.Id == todoId);
        todos.Remove(foundedTodo);
    }

    IList<Todo> todos = new List<Todo>();
}

